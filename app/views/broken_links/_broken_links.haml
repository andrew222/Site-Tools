%table.table.table-striped.broken_links_tab
  %tr
    %th URL
    %th dom_elem
    %th Link type
    %th Recommendation
    %th Details
    %th.actions= t("shared.action")
  - @broken_links.each do |broken_link|
    %tr
      %td= broken_link.url
      %td= broken_link.dom_elem
      %td= broken_link.link_type
      %td= broken_link.recommendation
      %td= broken_link.details
      %td.actions
        = link_to '', site_broken_link_path(@site, broken_link), class: "icon-check"
        = link_to '', edit_site_broken_link_path(@site, broken_link), class: "icon-edit"
        = link_to '', site_broken_link_path(@site, broken_link), method: :delete, data: { confirm: 'Are you sure?' }, class: "icon-trash"
= will_paginate @broken_links, renderer: BootstrapPagination::Rails, previous_label: t("links.pre_page"), next_label: t("links.next_page")
