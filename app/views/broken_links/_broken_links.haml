%table.broken_links_tab
  %tr
    %th URL
    %th dom_elem
    %th Link type
    %th Recommendation
    %th Details
    %th{"colspan" => 3}
  - @broken_links.each do |broken_link|
    %tr
      %td= broken_link.url
      %td= broken_link.dom_elem
      %td= broken_link.link_type
      %td= broken_link.recommendation
      %td= broken_link.details
      %td= link_to 'Show', site_broken_link_path(@site, broken_link)
      %td= link_to 'Edit', edit_site_broken_link_path(@site, broken_link)
      %td= link_to 'Destroy', site_broken_link_path(@site, broken_link), method: :delete, data: { confirm: 'Are you sure?' }
= will_paginate @broken_links, renderer: BootstrapPagination::Rails, previous_label: t("links.pre_page"), next_label: t("links.next_page")
