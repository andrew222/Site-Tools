%h1= t("links.title") 

%table.broken_links_tab
  %tr
    %th Url
    %th Dom elem
    %th Link type
    %th Recommendation
    %th Details
    %th= t("shared.action")

  - @broken_links.each do |broken_link|
    %tr
      %td= broken_link.url
      %td= broken_link.dom_elem
      %td= broken_link.link_type
      %td= broken_link.recommendation
      %td= broken_link.details
      %td
        = link_to '', broken_link
        = link_to 'Edit', edit_broken_link_path(broken_link)
        = link_to 'Destroy', broken_link, method: :delete, data: { confirm: 'Are you sure?' }
= will_paginate @broken_links, renderer: BootstrapPagination::Rails, previous_label: t("links.pre_page"), next_label: t("links.next_page")
%br

= link_to 'New Broken link', new_broken_link_path
